require 'chkbuild'

ChkBuild.limit(:data=>1024*1024*800, :as=>1024*1024*800)

gcc = ChkBuild::GCC.def_target(
  #%w[trunk],
  %w[trunk 4.7 4.6 4.5],
  #%w[trunk 4.5],
  #%w[4.5],
  :old => 1)

ChkBuild::Ruby.def_target(
  #ChkBuild::Ruby::MaintainedBranches,
  %w[trunk],

  [
    { :suffix_? => '-o3', :optflags => %w[-O3] },
    { :suffix_? => '-o2', :optflags => %w[-O2] },
    { :suffix_? => '-o1', :optflags => %w[-O1] },
    { :suffix_? => '-o0', :optflags => %w[-O0] },
    { :suffix_? => '-os', :optflags => %w[-Os] },
  ],

  #[
  #  { :suffix_? => '-core2', :optflags_tune => %w[-mtune=core2] },
  #  nil
  #],

  [nil, "pth"],
  gcc,
  :old => 1,
  :inplace_build => false)

ChkBuild.main
